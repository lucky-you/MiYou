<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg"
        android:orientation="vertical">


        <com.zhowin.base_library.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mBackgroundColor="@color/transparent"
            app:mLeftSrc="@mipmap/back_white_icon"
            app:mTitle="登录"
            app:mTitleColor="@color/white" />


        <LinearLayout
            android:id="@+id/llPhoneOrPasswordLoginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_white_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RadioGroup
                android:id="@+id/rgLoginButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPhoneLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="短信登录"
                    android:textColor="@color/login_button_text_color"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rbPasswordLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="账号密码登录"
                    android:textColor="@color/login_button_text_color"
                    android:textSize="14sp" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/llPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:visibility="visible">


                <EditText
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="13dp" />

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号码"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="13dp" />


                    <TextView
                        android:id="@+id/tvGetVerificationCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/color_8c86fa"
                        android:textSize="12sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone">


                <EditText
                    android:id="@+id/editPhoneNumber"
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="13dp" />

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="13dp" />


                    <ImageView
                        android:id="@+id/ivPasswordClose"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@color/color_f3f3f3" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <TextView
                    android:id="@+id/tvForgetPassword"
                    android:layout_width="80dp"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="@color/color_8c86fa"
                    android:textSize="12sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvLogin"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@mipmap/login_sure_btn"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/color_white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tvOneClickLogin"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="一键登录"
                android:textColor="@color/color_8c86fa"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivLoginLeftTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_zs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/llPhoneOrPasswordLoginLayout" />


        <TextView
            android:id="@+id/tvUserAgreement"
            style="@style/TextViewStyleOf14Sp"
            android:layout_marginBottom="40dp"
            android:text="登录即表示同意用户协议"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>