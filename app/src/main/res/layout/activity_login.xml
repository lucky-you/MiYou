<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9A80FA"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mBackgroundColor="@color/transparent" />


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:background="@drawable/shape_center_hit_message_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RadioGroup
                android:id="@+id/rgLoginButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPhoneLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="短信登录"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rbPasswordLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="账号密码登录"
                    android:textSize="14sp" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/llPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:visibility="visible">


                <EditText
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:textColorHint="@color/color_999"
                    android:textSize="13dp" />

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号码"
                        android:textColorHint="@color/color_999"
                        android:textSize="13dp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/color_8c86fa"
                        android:textSize="12sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone">


                <EditText
                    android:id="@+id/editPhoneNumber"
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:textColorHint="@color/color_999"
                    android:textSize="13dp" />

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:textColorHint="@color/color_999"
                        android:textSize="13dp" />


                    <ImageView
                        android:id="@+id/ivPasswordClose"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@color/color_f3f3f3" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp" />

                <TextView
                    android:id="@+id/tvForgetPassword"
                    android:layout_width="80dp"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="@color/color_8c86fa"
                    android:textSize="12sp" />

            </LinearLayout>


            <com.zhowin.library.radius.RadiusTextView
                android:id="@+id/tvLogin"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/color_white"
                android:textSize="13sp"
                app:rv_backgroundColor="@color/color_8c86fa"
                app:rv_radiusHalfHeightEnable="true" />


            <TextView
                android:id="@+id/tvOneClickLogin"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="一键登录"
                android:textColor="@color/color_8c86fa"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvUserAgreement"
            style="@style/TextViewStyleOf14Sp"
            android:layout_marginBottom="40dp"
            android:text="登录即表示同意用户协议"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>