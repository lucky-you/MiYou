<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="设置" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    style="@style/DivideLineStyle"
                    android:layout_height="10dp"
                    android:background="@color/color_fafafa" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAccountAndSecurity"
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/TextViewStyleOf14Sp"
                        android:gravity="center_vertical"
                        android:text="账号与安全"
                        android:textColor="@color/color_333"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mine_more_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_height="10dp"
                    android:background="@color/color_fafafa" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:divider="@drawable/shape_divide_line_bg"
                    app:dividerPadding="16dp"
                    app:showDividers="middle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clUserAgreement"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="用户协议"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clCommunityNorms"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="社区规范"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clContactUs"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="联系我们"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_height="10dp"
                    android:background="@color/color_fafafa" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:divider="@drawable/shape_divide_line_bg"
                    app:dividerPadding="16dp"
                    app:showDividers="middle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clBlackList"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="黑名单"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPrivacySetting"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="隐私设置"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clCheckVersion"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="检查新版本"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/mine_more_icon"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:text="V1.0.2"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clClearCache"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="清除缓存"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/mine_more_icon"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:text="10.2M"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clAboutUs"
                        style="@style/RelativeLayoutWidth44DpStyle"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/TextViewStyleOf14Sp"
                            android:gravity="center_vertical"
                            android:text="关于我们"
                            android:textColor="@color/color_333"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_more_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_height="10dp"
                    android:background="@color/color_fafafa" />

                <TextView
                    android:id="@+id/tvOutLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dp"
                    android:background="@drawable/shape_out_login_bg"
                    android:gravity="center"
                    android:text="退出"
                    android:textColor="@color/color_FE6267"
                    android:textSize="15sp" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</layout>