<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemRootLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserHeadPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_default_hp"
        app:civ_border_color="@color/color_fafafa"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvUserNickName"
        style="@style/TextViewStyleOf14Sp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLength="6"
        android:text="小喵喵小喵小猫"
        android:textColor="@color/color_333"
        app:layout_constraintLeft_toRightOf="@id/civUserHeadPhoto"
        app:layout_constraintTop_toTopOf="@+id/civUserHeadPhoto" />


    <TextView
        android:id="@+id/tvUserSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/girl_box"
        android:drawableLeft="@drawable/girl_icon"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="22"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/tvUserNickName"
        app:layout_constraintTop_toBottomOf="@id/tvUserNickName" />

    <TextView
        android:id="@+id/tvUserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_user_knighthood_bg"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="22"
        android:textColor="@color/color_8575F9"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserSex"
        app:layout_constraintLeft_toRightOf="@id/tvUserSex"
        app:layout_constraintTop_toBottomOf="@id/tvUserNickName" />

    <TextView
        android:id="@+id/tvKnighthood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_user_knighthood_bg"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="爵位"
        android:textColor="@color/color_8575F9"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUserLevel"
        app:layout_constraintLeft_toRightOf="@id/tvUserLevel"
        app:layout_constraintTop_toBottomOf="@id/tvUserNickName" />


    <View
        android:id="@+id/divideLine"
        style="@style/DivideLineStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
