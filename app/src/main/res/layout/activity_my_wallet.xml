<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="我的钱包" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:background="@color/color_8E9DFD">


            <ImageView
                android:id="@+id/ivRecharge"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_def_image"
                app:layout_constraintBottom_toTopOf="@id/tvRechargeNumber"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDiamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="钻石"
                android:textColor="@color/color_ff656565"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/tvRechargeNumber"
                app:layout_constraintLeft_toRightOf="@id/ivRecharge"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRechargeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="12054"
                android:textColor="@color/color_333"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivRecharge" />


            <TextView
                android:id="@+id/tvRecharge"
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</layout>