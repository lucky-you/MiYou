<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhowin.base_library.view.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_10dp_bg">

                <LinearLayout
                    android:id="@+id/llLeftUserLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/flSexLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civUserHeadPhoto"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_default_hp"
                            app:civ_border_color="@color/color_FE6267"
                            app:civ_border_width="1dp" />

                        <ImageView
                            android:id="@+id/ivUserSexImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/list_girl_icon" />

                    </FrameLayout>

                    <TextView
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:text="小喵喵喵喵"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_user_level_bg"
                            android:gravity="center"
                            android:text="V11"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/shape_user_level_bg"
                            android:gravity="center"
                            android:text="爵位"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivHeartbeatImage"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/list_heart_pic"
                    app:layout_constraintLeft_toRightOf="@+id/llLeftUserLayout"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llRightUserLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ivHeartbeatImage"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_default_hp"
                            app:civ_border_color="@color/color_FE6267"
                            app:civ_border_width="1dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/list_girl_icon" />

                    </FrameLayout>

                    <TextView
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:text="小喵喵喵喵"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_user_level_bg"
                            android:gravity="center"
                            android:text="V11"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/shape_user_level_bg"
                            android:gravity="center"
                            android:text="爵位"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/llRightUserLayout"
                    app:layout_constraintRight_toRightOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/list_bubble_achine" />


                    <TextView
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="×5200"
                        android:textColor="@color/color_FE6267"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextViewStyleOf14Sp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:text="4分钟前"
                        android:textColor="@color/color_999"
                        android:textSize="11sp" />


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                style="@style/RecycleViewStyle"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_white_10dp_bg" />

        </LinearLayout>

    </com.zhowin.base_library.view.RefreshLayout>


</layout>
