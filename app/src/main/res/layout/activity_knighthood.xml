<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/titleView"
            app:mRightImage="@drawable/vip_notice_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mBackgroundColor="@color/color_2E2E30"
            app:mLeftSrc="@mipmap/back_white_icon"
            app:mTitle="爵位特权"
            app:mTitleColor="@color/white" />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/slidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_2E2E30"
            app:tl_indicator_color="@color/color_F3D08E"
            app:tl_indicator_corner_radius="2dp"
            app:tl_indicator_height="4dp"
            app:tl_indicator_margin_bottom="4dp"
            app:tl_indicator_width="20dp"
            app:tl_textSelectColor="@color/color_F3D08E"
            app:tl_textUnselectColor="@color/white"
            app:tl_textsize="16sp" />

        <com.zhowin.base_library.view.NoScrollViewPager
            android:id="@+id/noScrollViewPager"
            style="@style/RecycleViewStyle" />
    </LinearLayout>


</layout>