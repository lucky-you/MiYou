<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="账号安全" />

        <View
            style="@style/DivideLineStyle"
            android:layout_height="10dp"
            android:background="@color/color_fafafa" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:divider="@drawable/shape_divide_line_bg"
            app:dividerPadding="16dp"
            app:showDividers="middle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clChangePhoneNumber"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_height="50dp">

                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:gravity="center_vertical"
                    android:text="更换绑定手机号"
                    android:textColor="@color/color_333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUserMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/mine_more_icon"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="130****0011"
                    android:textColor="@color/color_343434"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPasswordManagement"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_height="50dp">

                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:gravity="center_vertical"
                    android:text="密码管理"
                    android:textColor="@color/color_333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_more_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAccountLogout"
                style="@style/RelativeLayoutWidth44DpStyle"
                android:layout_height="50dp">

                <TextView
                    style="@style/TextViewStyleOf14Sp"
                    android:gravity="center_vertical"
                    android:text="永久注销账号"
                    android:textColor="@color/color_333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_more_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            style="@style/DivideLineStyle"
            android:layout_height="10dp"
            android:background="@color/color_fafafa" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="永久注销后会删除所有数据，无法恢复，请谨慎操作"
            android:textColor="@color/color_9A9A9A"
            android:textSize="12sp" />

    </LinearLayout>


</layout>