<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContactItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_chat_room_message_item_bg"
    android:minHeight="38dp"
    android:paddingLeft="10dp"
    android:paddingTop="6dp"
    android:paddingRight="10dp"
    android:paddingBottom="6dp">


    <TextView
        android:id="@+id/tvLeftTitle"
        style="@style/TextViewStyleOf14Sp"
        android:gravity="center"
        android:text="周小川"
        android:textColor="@color/color_4DE5FC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMiddleTitle"
        style="@style/TextViewStyleOf14Sp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="进入了房间"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLeftTitle"
        app:layout_constraintLeft_toRightOf="@id/tvLeftTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>
