<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserHeadPhotosLayout"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_default_hp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/list_man_icon" />

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_littleheart_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_default_hp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/list_girl_icon" />

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/clUserHeadPhotosLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvUserNickName"
            style="@style/TextViewStyleOf14Sp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="4"
            android:singleLine="true"
            android:text="小喵喵喵喵"
            android:textColor="@color/color_333"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/shape_user_level_bg"
            android:gravity="center"
            android:text="V11"
            android:textColor="@color/color_white"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvUserNickName"
            app:layout_constraintLeft_toRightOf="@id/tvUserNickName" />

        <TextView
            android:id="@+id/tvUserKnighthood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/shape_user_level_bg"
            android:gravity="center"
            android:text="爵位"
            android:textColor="@color/color_white"
            android:textSize="11sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvUserLevel"
            app:layout_constraintLeft_toRightOf="@id/tvUserLevel" />

        <TextView
            android:id="@+id/tvReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="打赏"
            android:textColor="@color/color_999"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvUserNickName"
            app:layout_constraintTop_toBottomOf="@id/tvUserNickName" />


        <TextView
            android:id="@+id/tvRewardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="小梦梦"
            android:textColor="@color/color_FE6267"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvReward"
            app:layout_constraintLeft_toRightOf="@id/tvReward" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivGiftName"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/list_bubble_achine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGiftNumber"
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="×5200"
            android:textColor="@color/color_FE6267"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/ivGiftName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextViewStyleOf14Sp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="4分钟前"
            android:textColor="@color/color_999"
            android:textSize="9sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvGiftNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvGiftNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
