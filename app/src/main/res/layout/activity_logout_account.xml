<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="永久注销账号" />

        <TextView
            android:id="@+id/tvOriginalMobile"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="当前绑定手机号：189****9870"
            android:textColor="@color/color_333" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/color_ff656565"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editVerificationCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvGetVerificationCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_FF4747"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            style="@style/DivideLineStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="30dp" />


        <TextView
            android:id="@+id/tvApplyLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_out_login_bg"
            android:gravity="center"
            android:text="申请注销"
            android:textColor="@color/color_FF4747"
            android:textSize="16sp" />

    </LinearLayout>


</layout>