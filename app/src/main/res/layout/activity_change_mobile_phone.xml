<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="更换绑定手机" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请先使用绑定手机号进行验证后，再进行换绑"
                android:textColor="@color/color_4B9BFF" />

            <TextView
                android:id="@+id/tvOriginalMobile"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:text="当前绑定手机号：189****9870"
                android:textColor="@color/color_333" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="+86"
                    android:textColor="@color/color_ff656565"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editMobilePhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="15sp" />
            </LinearLayout>


            <View style="@style/DivideLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textColor="@color/color_ff656565"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editVerificationCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="@color/color_333"
                    android:textColorHint="@color/color_999"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tvGetVerificationCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/color_4B9BFF"
                    android:textSize="15sp" />

            </LinearLayout>

            <View style="@style/DivideLineStyle" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/wallet_payment_btn"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</layout>